<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora_PDM.MainPage"
             BackgroundColor="{DynamicResource Theme_BackgroundBrush}">

    <Grid RowDefinitions="200, *">

        <!-- Pantalla de la calculadora -->
        <Border BackgroundColor="#73A8A8A8"                       
                Stroke="Transparent"
                StrokeShape="RoundRectangle 0 0 25 25" />
            
            <VerticalStackLayout>
                <Label Text="- - - " 
                    FontSize="22" 
                    FontAttributes="Bold" 
                    HorizontalOptions="End" 
                    VerticalOptions="Center" 
                    Margin="0,10,15,0"
                    TextColor="{DynamicResource Theme_TextBrush}" />
            <Label Text="= 0" 
                    FontSize="22" 
                    FontAttributes="Bold" 
                    HorizontalOptions="End" 
                    VerticalOptions="Center" 
                    Margin="0,22,10,0"
                    TextColor="{DynamicResource Theme_TextBrush}" />
            </VerticalStackLayout>



            <!-- Botones de la calculadora -->
        <Grid Grid.Row="1"
            RowDefinitions=" * , *, *, *, *"
            ColumnDefinitions="*,*,*,*" >
            <!-- Fila 0 -->
            <Button Text="%"    Grid.Row="0" Grid.Column="0"  FontSize="18" BackgroundColor="GreenYellow" Margin="0,0,8,8"/>
            <Button Text="xⁿ"   Grid.Row="0" Grid.Column="1"  FontSize="18" BackgroundColor="GreenYellow" Margin="0,0,8,8"/>
            <Button Text="x⁻¹"  Grid.Row="0" Grid.Column="2"  FontSize="18" BackgroundColor="GreenYellow" Margin="0,0,8,8"/>
            <Button Text="M"   Grid.Row="0" Grid.Column="3"  FontSize="18" BackgroundColor="GreenYellow" Margin="0,0,0,8"/>

            <!-- Fila 1 -->
            <Button Text="7" Grid.Row="1" Grid.Column="0"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="+" Grid.Row="1" Grid.Column="3"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,0,8"/>

            <!-- Fila 2 -->
            <Button Text="4" Grid.Row="2" Grid.Column="0"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="-" Grid.Row="2" Grid.Column="3"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,0,8"/>

            <!-- Fila 3 -->
            <Button Text="1" Grid.Row="3" Grid.Column="0"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,8"/>
            <Button Text="⨯" Grid.Row="3" Grid.Column="3"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,0,8"/>

            <!-- Fila 4 -->
            <Button Text="0" Grid.Row="4" Grid.Column="0"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,0"/>
            <Button Text="." Grid.Row="4" Grid.Column="1"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,0"/>
            <Button Text="=" Grid.Row="4" Grid.Column="2"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,0"/><Button Text="=" Grid.Row="4" Grid.Column="2"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,8,0"/>
            <Button Text="÷" Grid.Row="4" Grid.Column="3"  FontSize="22" BackgroundColor="CornflowerBlue" Margin="0,0,0,0"/>
        </Grid>
    </Grid>
</ContentPage>